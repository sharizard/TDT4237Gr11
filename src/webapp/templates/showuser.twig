{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info|raw }} <br />
{{ flash.error|raw }} <br />

{% if user %}
    <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Bio</th>
            <th>Age</th>
        </tr>
            <tr>
            <td>{{ user.id|raw }}</td>
            <td>{{ user.username|escape('js') }}</td>
            <td>{{ user.email|escape('js') }}</td>
            <td>{{ user.bio|escape('js') }}</td>
            <td>{{ user.age|escape('js') }}</td>
        </tr>
    </table>
{% else %}
    Could not find a user with username "{{ username|raw }}".
{% endif %}

{% endblock %}
