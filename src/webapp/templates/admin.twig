{% extends 'base.twig' %}

{% block content %}

<h2>Admin section</h2>

{% if users %}
    <table>
    <tr>
        <th>Id</th>
        <th>Username</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.id|raw }}</td>
            <td><a href="/user/{{ user.username|raw }}">{{ user.username|raw }}</a></td>
            <td>
            	<form action="/admin/delete/{{ user.username|raw }}" method="POST">
            		<input type="hidden" name="csrf_token" value="{{ csrf_token }}">
					<input type="submit" name="submit" value="Delete this user">
            	</form>
            </td>
        </tr>
    {% endfor %}
    </table>
{% else %}
    The users table is empty.
{% endif %}

{% endblock %}
